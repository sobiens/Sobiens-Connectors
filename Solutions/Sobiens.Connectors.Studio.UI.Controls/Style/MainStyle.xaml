    <Style x:Key="GenericTextBoxStyle" BasedOn="{StaticResource ControlBaseStyle}" TargetType="TextBox">
    </Style>

    <Style x:Key="GenericComboBoxStyle" BasedOn="{StaticResource ControlBaseStyle}" TargetType="ComboBox">
